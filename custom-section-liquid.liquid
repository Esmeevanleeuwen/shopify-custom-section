     },
     {
       "type": "image_picker",
       "id": "left_image",
       "label": "Afbeelding Links"
     },
     {
       "type": "image_picker",
       "id": "right_image",
       "label": "Afbeelding Rechts"
     },
     {
       "type": "image_picker",
       "id": "product_image",
